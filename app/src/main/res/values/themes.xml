<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AlphaXiv" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.AlphaXiv.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#B11818</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AlphaXiv</item>
    </style>
</resources>
